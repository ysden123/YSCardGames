<UserControl x:Class="YSCardGamesApp.BlackjackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YSCardGamesApp"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="650">
    <GroupBox Header="Blackjack" Margin="10">
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" Background="#FF63BF1B">
            <GroupBox Header="Player" Margin="10" Width="200">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <ListBox x:Name="PlayerCardsListBox" Height="150" Margin="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name}" Foreground="{Binding TextColor}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                            <Label x:Name="PlayerTotalLabel" Margin="5">Total:</Label>
                            <TextBox x:Name="PlayerTotalTextBox" Height="20" Width="40" Margin="5" IsReadOnly="True"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                            <Label Margin="5">Score:</Label>
                            <TextBox x:Name="PlayerScoreText" Height="20" Margin="5" Width="35" IsReadOnly="True"/>
                        </StackPanel>
                        
                        <Label x:Name="PlayerResultLabel" Margin="5" HorizontalAlignment="Center" Foreground="Red" Visibility="Hidden" FontSize="17" FontWeight="Bold">Winner!</Label>
                        
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                            <Button x:Name="MoreButton" Content="More" Width="75" Margin="5" Click="MoreButton_Click"/>
                            <Button x:Name="CompletedButton" Content="Completed" Width="75" Margin="5" Click="CompletedButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Bank" Margin="10" Width="200">
                <StackPanel Orientation="Vertical">
                    <ListBox x:Name="BankCardsListBox" Height="150" Margin="5" Visibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Name}" Foreground="{Binding TextColor}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel x:Name="BankStatusPanel" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" Visibility="Hidden">
                        <Label x:Name="BankTotalLabel" Margin="5">Total:</Label>
                        <TextBox x:Name="BankTotalTextBox" Height="20" Width="40" Margin="5" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                        <Label Margin="5">Score:</Label>
                        <TextBox x:Name="BankScoreText" Margin="5" Height="20" Width="35" IsReadOnly="True"/>
                    </StackPanel>
                    <Label x:Name="BankResultLabel" Margin="5" HorizontalAlignment="Center" Foreground="Red" Visibility="Hidden" FontSize="17" FontWeight="Bold">Winner!</Label>
                </StackPanel>
            </GroupBox>
            <Button x:Name="NewGameButton" Content="New Game" Width="70" Height="50" Margin="10" VerticalAlignment="Center" Click="NewGameButton_Click"/>
        </StackPanel>
    </GroupBox>
</UserControl>
